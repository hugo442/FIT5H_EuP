<p id="notice"><%= notice %></p>

<h1>Schützentabelle</h1>
<%= button_to 'Neuer Schütze', new_marksman_path, method: :get, class: "btn btn-primary" %>
<table>
  <thead>
    <tr>
      <th>Schützennummer</th>
      <th>Vorname</th>
      <th>Nachname</th>
      <th>Ortschaft</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @marksmen.each do |marksman| %>
      <tr>
        <td><%= marksman.startnr %></td>
        <td><%= marksman.firstname %></td>
        <td><%= marksman.surname %></td>
        <td><%= marksman.location %></td>
        <td><%= link_to 'Details', marksman %></td>
        <td><%= link_to 'editieren', edit_marksman_path(marksman) %></td>
        <td><%= link_to 'löschen', marksman, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


