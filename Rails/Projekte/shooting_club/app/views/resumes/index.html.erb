<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br>
<h1>Log-Datein:</h1>
<br>
<div class="row">
  <div class="small-2 large-4 columns"><%= button_to "Hochladen", new_resume_path, method: :get, class: "button primary" %></div>
  <div class="small-4 large-4 columns"></div>
  <div class="small-6 large-4 columns"></div>
</div>
<br>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Downloadfile</th>
      <th>Notiz</th>
      <th>Erstellt am</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @resumes.each do |resume| %>
      <tr>
        <td><%= link_to "#{resume.attachment_identifier}", resume.attachment_url %></td>
        <td><%= resume.note %></td>
        <td><%= resume.created_at.strftime("%d.%m.%Y %H:%M Uhr") %></td>
        <td>
          <%= link_to 'Importieren', import_event_path(resume.id), method: :get, class: "button small secondary" %>
          <%= link_to 'LÃ¶schen', resume, method: :delete, data: { confirm: "Are you sure that you wish to delete #{resume.attachment_identifier}?" }, class: "button small alert" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>