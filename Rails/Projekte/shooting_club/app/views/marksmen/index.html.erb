<p id="notice"><%= notice %></p>

<h1>Schützentabelle</h1>
<br><br>

<div class="row">
  <div class="small-2 large-4 columns"><%= button_to 'Neuer Schütze', new_marksman_path, method: :get, class: "button primary" %></div>
  <div class="small-4 large-4 columns"></div>
  <div class="small-6 large-4 columns"></div>
</div>
<table>
  <thead>
    <tr>
      <th>Schützennummer</th>
      <th>Vorname</th>
      <th>Nachname</th>
      <th>Ortschaft</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @marksmen.each do |marksman| %>
      <tr>
        <td><%= marksman.startnr %></td>
        <td><%= marksman.firstname %></td>
        <td><%= marksman.surname %></td>
        <td><%= marksman.location %></td>
        <td>
          <%= link_to 'Details', marksman, class: "button small warning" %>
          <%= link_to 'Edit', edit_marksman_path(marksman), class: "button small secondary" %>
          <%= link_to 'Löschen', marksman, method: :delete, data: { confirm: 'Are you sure?' }, class: "button small alert" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


